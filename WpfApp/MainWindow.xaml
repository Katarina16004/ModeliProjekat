<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NMS Client GUI - Network Model Service" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,5,5,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <TextBlock Grid.Row="0" 
                   Text="Network Model Service - GDA Client" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Foreground="#2C3E50"/>

        <!-- Kontrole -->
        <GroupBox Grid.Row="1" Header="Opcije" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <Label Content="Tip objekta:"/>
                    <ComboBox Name="cmbType" Width="250">
                        <ComboBoxItem Content="BaseVoltage" Tag="BASEVOLTAGE"/>
                        <ComboBoxItem Content="Switch" Tag="SWITCH" IsSelected="True"/>
                        <ComboBoxItem Content="Terminal" Tag="TERMINAL"/>
                        <ComboBoxItem Content="ConnectivityNode" Tag="CONNECTIVITYNODE"/>
                        <ComboBoxItem Content="ConnectivityNodeContainer" Tag="CONNECTIVITYNODECONTAINER"/>
                        <ComboBoxItem Content="TopologicalNode" Tag="TOPOLOGICALNODE"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                    <Button Name="btnGetAll" Content="📋 Prikaži sve objekte" Width="180" Click="BtnGetAll_Click"/>
                    <Button Name="btnGetMaxGid" Content="🔍 Switch sa max GID" Width="180" Click="BtnGetMaxGid_Click"/>
                    <Button Name="btnGetTerminals" Content="🔗 Terminali za max Switch" Width="180" Click="BtnGetTerminals_Click"/>
                    <Button Name="btnClear" Content="🗑️ Očisti" Width="180" Click="BtnClear_Click" Background="#E74C3C" Foreground="White"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Lista rezultata -->
        <GroupBox Grid.Row="2" Header="Rezultati">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Lista objekata -->
                <GroupBox Grid.Column="0" Header="Lista objekata" Margin="0,0,5,0">
                    <ListBox Name="lstObjects" 
                             SelectionChanged="LstObjects_SelectionChanged"
                             Background="#ECF0F1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#BDC3C7" BorderThickness="0,0,0,1" Padding="5" Margin="0,2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13" Foreground="#2C3E50"/>
                                        <TextBlock Text="{Binding Gid}" FontSize="10" Foreground="#7F8C8D"/>
                                        <TextBlock Text="{Binding Type}" FontSize="10" Foreground="#3498DB"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

                <!-- Detalji objekta -->
                <GroupBox Grid.Column="1" Header="Detalji objekta" Margin="5,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="pnlDetails" Margin="10" Background="White"/>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </GroupBox>

        <!-- Status bar -->
        <StatusBar Grid.Row="3" Height="30" Background="#34495E">
            <StatusBarItem>
                <TextBlock Name="txtStatus" Text="Spremno" Foreground="White" FontWeight="Bold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>